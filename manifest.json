{
  "name": "Price Assist",
  "description" : "Makes shopping easier",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "img/logo_transparent.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "<all_urls>"
  ],

  "web_accessible_resources": [
      "dependencies/json5.min.js"
  ],

  "background": {
    "scripts": ["background.js", "dependencies/json5.min.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["content_script.js","dependencies/json5.min.js"],
      "all_frames": false
    }
  ],
  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://www.googletagmanager.com/ https://apis.google.com/; object-src 'self'"
}
