{
    "name": "Price Checcer",
    "description" : "Makes shopping easier",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": [
      "tabs",
      "activeTab",
      "webNavigation",
      "<all_urls>"
    ],

    "web_accessible_resources": [
        "retailers-popup.html",
        "iframe.html",
        "Bootstrap-CSS/bootstrap.min.css",
        "retailers-popup.css",
        "jquery.js",
        "json5.min.js"
    ],

    "background": {
      "scripts": ["background.js", "json5.min.js"],
      "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["https://www.amazon.com/*"],
        "js": ["content_script.js", "jquery.js", "json5.min.js"]
      }
    ]
}