{
    "name": "Priceer",
    "description" : "Makes shopping easier",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
      "default_icon": {
        "32": "img/icon.png"
      }
    },
    "permissions": [
      "tabs",
      "activeTab",
      "webNavigation",
      "<all_urls>"
    ],

    "web_accessible_resources": [
        "jquery.js",
        "json5.min.js"
    ],

    "background": {
      "scripts": ["background.js", "json5.min.js"],
      "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["https://www.amazon.com/*"],
        "js": ["content_script.js", "jquery.js", "json5.min.js"]
      }
    ]
}