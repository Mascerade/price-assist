{
    "name": "Price Assist",
    "description" : "Makes shopping easier",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
      "default_icon": {
        "128": "img/logo_transparent.png"
      }
    },
    "permissions": [
      "tabs",
      "activeTab",
      "webNavigation",
      "<all_urls>"
    ],

    "web_accessible_resources": [
        "dependencies/json5.min.js"
    ],

    "background": {
      "scripts": ["background.js", "dependencies/json5.min.js"],
      "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["https://www.amazon.com/*"],
        "js": ["content_script.js","dependencies/json5.min.js"],
        "all_frames": false
      }
    ]
}
